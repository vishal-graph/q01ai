{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@tatvaops/core": ["packages/core/src/index.ts"],
      "@tatvaops/ai": ["packages/ai/src/index.ts"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["node"]
  },
  "exclude": [
    "node_modules", 
    "dist",
    "test-ui",
    "apps/api",
    "packages/db",
    "packages/services"
  ]
}

